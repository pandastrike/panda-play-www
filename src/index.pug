html
  head
    
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    // Shortcut Icon
    link(rel='shortcut icon', href='/images/favicon.ico')

    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com"
        + "/ajax/libs/normalize/7.0.0/normalize.min.css"
    )
    link(
      rel="stylesheet"
      href="//cdnjs.cloudflare.com"
        + "/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    )
        
    link(rel="stylesheet", href="./index.css")

    script(
      src="https://cdnjs.cloudflare.com"
        + "/ajax/libs/webcomponentsjs/1.0.14/"
        + "webcomponents-lite.js"
      type="text/javascript"
    )
    
    script(
      src="https://cdn.jsdelivr.net/"
        + "npm/alameda@1.2.0/alameda.min.js"
      type="text/javascript"
    )
    
    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/"
        + "ajax/libs/prism/1.8.3/themes/prism.min.css"
    )
    script(
      src="https://cdnjs.cloudflare.com/"
        + "ajax/libs/prism/1.8.3/prism.min.js"
    )

    script(
      src="https://cdnjs.cloudflare.com/"
        + "ajax/libs/prism/1.8.3/components/prism-coffeescript.min.js"
    )
    
    link(
      rel="stylesheet"
      href="//cdnjs.cloudflare.com"
        + "/ajax/libs/prism/1.8.3/plugins/toolbar/prism-toolbar.css"
    )
    
    script(
      src="//cdnjs.cloudflare.com"
        + "/ajax/libs/prism/1.8.3/plugins"
        + "/toolbar/prism-toolbar.min.js"
      )
    
    script(
      src="//cdnjs.cloudflare.com"
        + "/ajax/libs/prism/1.8.3/plugins"
        + "/show-language/prism-show-language.min.js"
      )

    script.
      Prism.languages.coffee = Prism.languages.coffeescript
      
body
  header
    a(href="//pandastrike.com")
      img(src="/images/logo.png")
      
  main
    section
      include:markdown-it ../README.md
  
  aside
    section
      p
        i(class="fa fa-github" aria-hidden="true")
        | &nbsp;
        a(href="https://github.com/pandastrike/panda-play") Contribute!
        
      p
        | Try the 
        a(href="/demos/markdown-editor")
          | demo
        |!
        
